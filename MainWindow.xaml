<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrystalReportDemo"
        xmlns:Viewer="clr-namespace:SAPBusinessObjects.WPF.Viewer;assembly=SAPBusinessObjects.WPF.Viewer" x:Class="CrystalReportDemo.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Grid>
        <Button Content="Next Report" x:Name="btnNextReport" HorizontalAlignment="Left" Margin="10" VerticalAlignment="Top" Width="120" Height="35" Click="btnNextReport_Click"/>
        <Button Content="Load Report Viewer" x:Name="btnViewer" HorizontalAlignment="Right" Margin="10" VerticalAlignment="Top" Width="120" Height="35" Click="btnViewer_Click"/>
        <!--<DataGrid x:Name="dataGridViewTest" HorizontalAlignment="Left" Height="800" Margin="50" VerticalAlignment="Top" Width="850"/>-->

        <Viewer:CrystalReportsViewer x:Name="crystalReportViewer" HorizontalAlignment="Right" Height="auto" Margin="50,50,50,50" VerticalAlignment="Top" Width="auto" ToggleSidePanel="None"/>

        <Viewer:CrystalReportsViewer x:Name="crystalReportViewer2" HorizontalAlignment="Left" Height="auto" Margin="50,50,50,50" VerticalAlignment="Top" Width="auto" ToggleSidePanel="None"/>

    </Grid>
</Window>
